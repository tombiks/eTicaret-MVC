@{
    ViewData["Title"] = "Details";
}

@section Styles {
    <link rel="stylesheet" href="~/css/profile-style.css" asp-append-version="true" />
}

<partial name="Partials/OtherHeroSection" model="false" />
<div class="container">
    <div class="main-body">
        <div class="row">
            <div class="col-lg-4">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex flex-column align-items-center text-center">
                            <img src="https://bootdey.com/img/Content/avatar/avatar6.png" alt="Admin" class="rounded-circle p-1 bg-custom-green" width="110">
                            <div class="mt-3">
                                <h4>John Doe</h4>
                                <p class="text-muted font-size-sm">Bay Area, San Francisco, CA</p>
                                <button class="btn btn-custom-green">Seller Account</button>
                            </div>
                        </div>
                        <hr class="my-4">
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                                <h6 class="mb-0"><i class="fa fa-github me-2"></i>Github</h6>
                                <span class="text-secondary contact-display" id="githubDisplay">bootdey</span>
                                <input type="text" class="form-control form-control-sm contact-input d-none" id="githubInput" value="bootdey">
                            </li>
                        </ul>
                        <div class="d-grid gap-2 mt-3">
                            <button id="editContactsBtn" class="btn btn-outline-primary" onclick="toggleContactsEdit()">Edit Contacts</button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-8">
                <div class="card">
                    <div class="card-body">
                        <div class="row mb-3">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Full Name</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                <input type="text" id="fullName" class="form-control profile-input" value="John Doe" readonly>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Email</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                <input type="text" id="email" class="form-control profile-input" value="john@example.com" readonly>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Phone</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                <input type="text" id="phone" class="form-control profile-input" value="(239) 816-9029" readonly>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Address</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                <input type="text" id="address" class="form-control profile-input" value="Bay Area, San Francisco, CA" readonly>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-3"></div>
                            <div class="col-sm-9 text-secondary">
                                <input type="button" id="editProfileBtn" class="btn btn-primary px-4" value="Edit Profile" onclick="toggleProfileEdit()">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12">
                        <div class="card">
                            <div class="card-header" id="headingProducts">
                                <h5 class="mb-0">
                                    <button class="btn btn-link btn-block text-left" type="button" data-toggle="collapse" data-target="#collapseProducts" aria-expanded="true" aria-controls="collapseProducts">
                                        My Products
                                    </button>
                                </h5>
                            </div>
                            <div id="collapseProducts" class="collapse show" aria-labelledby="headingProducts">
                                <div class="card-body">
                                    <div class="d-flex align-items-center justify-content-between mb-3 pb-3 border-bottom">
                                        <div>
                                            <span class="fw-bold mr-3">Product Names</span>
                                            <span class="fw-bold mr-3">Product's Category</span>
                                            <span>Number of sales: 14</span>
                                        </div>
                                        <div>
                                            <input type="button" class="btn btn-sm btn-primary px-2 mr-3" value="Edit Product" />
                                            <input type="button" class="btn btn-sm btn-danger px-2" value="Delete Product" />
                                        </div>
                                    </div>
                                    <div class="d-flex align-items-center justify-content-between mb-3 pb-3">
                                        <div>
                                            <span class="fw-bold mr-3">Product Names</span>
                                            <span class="fw-bold mr-3">Product's Category</span>
                                            <span>Number of sales: 14</span>
                                        </div>
                                        <div>
                                            <input type="button" class="btn btn-sm btn-primary px-2 mr-3" value="Edit Product" />
                                            <input type="button" class="btn btn-sm btn-danger px-2" value="Delete Product" />
                                        </div>
                                    </div>
                                    <div class="mt-3">
                                        <button class="btn btn-custom-green btn-sm">
                                            <i class="fa fa-plus mr-2"></i>New Product
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/profile-script.js" asp-append-version="true"></script>
}